<%= form_for :session, :url => sessions_path do |f| %>
  <% email_value = "" %>
  <% if !@user.nil? %>
    <% email_value = @user.email%>
    <%= render :partial => 'shared/error_messages', :locals => {:object => @user} %>
  <% end %>
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email, :value => email_value %>
  </div>
  <div>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Sign in" %>
  </div>
<% end %>