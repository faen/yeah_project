<h1>Sign in here</h1>
<%= form_for :session, :url => sessions_path do |f| %>
  <% if !@user.nil? %>
    <%= render :partial => 'shared/error_messages', :locals => {:object => @user} %>
  <% end %>
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Sign in" %>
  </div>
<% end %>
