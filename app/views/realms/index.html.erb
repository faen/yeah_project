<h1>My realms</h1>
<strong><%= link_to "new realm", new_user_realm_path(current_user) %></strong>
<table class='listing'>
  <thead>
    <tr>
      <th>Name</th>
      <th>products</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
<% @realms.each do |r| %>
  <tr>
    <td>
      <%= link_to r.name, user_realm_path(current_user, r) %>
    </td>
    <td>
      <%= r.products.collect{|p| [p.name]}.split.join(", ") %>
    </td>
    <td>
      <%= crud_links([{:index => 'edit', :path => edit_user_realm_path(current_user, r)},
                      {:index => 'delete', :path => user_realm_path(current_user, r)}]) %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>