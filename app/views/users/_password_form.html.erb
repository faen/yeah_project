<%= form_for @user do |f| %>
  <%= render :partial => 'shared/error_messages', :locals => {:object => @user} %>
  <div>
    <%= f.label :password%><br/>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation%><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "Sign up"%>
  </div>
<% end %>