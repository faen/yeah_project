<% submit_label = @sprint.new_record? ? "create" : "update" %>
<%= "@sprint.end_date: #{@sprint.end_date}" %>
<div class='form_container'>
  <div class='form_margins'>
    <%= form_for @sprint, :url => polymorphic_path([@backlog, @sprint]) do |f| %>
      <div class='form_body'>
        <table>
          <tr>
            <td>
              <%= f.label :start_date %>
            </td>
            <td>
              <%= f.date_select :start_date, {start_year:  Time.now.year, end_year:  Time.now.year} %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :end_date %>
            </td>
            <td>
              <% t = Date.current%>
              <%= f.date_select :end_date, start_year: t.year, end_year: t.year + 1 %><br>
            </td>
          </tr>
        </table>
      </div>
      <div class='form_actions'>
        <%= f.submit submit_label %>
      </div>
    <% end %>
  </div>
</div>