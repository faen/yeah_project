<header class='clearfix'>
  <div class='logo'>
    <%= link_to logo, root_path %>
  </div>
  <div class='content'>
    <nav>
      <ul>
        <% if signed_in? %>
          <!-- <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Realms", user_realms_path(current_user) %></li>
          <li><%= link_to "Products", user_products_path(current_user) %></li>
          <li><%= link_to "Projects", user_projects_path(current_user) %></li> -->
          <li><%= link_to "Sign out", signout_path %></li>
        <% else %>
          <li><%= link_to "Features", features_path %></li>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </nav>
    <% if signed_in? %>
      <div class="user_info">
          <span>You are logged in as: <%= current_user.email %></span>
      </div>
    <% end %>
  </div>
</header>

<nav>
  <ul>
    <% if signed_in? %>
      <%= "<li class=#{controller.controller_name == 'users' && controller.action_name == 'show'? 'selected' : ''}>#{link_to "Dashboard", user_path(current_user)}</li>".html_safe %>
      <%= "<li class=#{controller.controller_name == 'users' && controller.action_name == 'edit'? 'selected' : ''}>#{link_to "Profile", edit_user_path(current_user)}</li>".html_safe %>
      <%= "<li class=#{controller.controller_name == 'realms' ? 'selected' : ''}>#{link_to "Realms", user_realms_path(current_user)}</li>".html_safe %>
      <%= "<li class=#{controller.controller_name == 'products' ? 'selected' : ''}>#{link_to "Products", user_products_path(current_user)}</li>".html_safe %>
      <%= "<li class=#{controller.controller_name == 'projects' ? 'selected' : ''}>#{link_to "Projects", user_projects_path(current_user)}</li>".html_safe %>
    <% end %>
  </ul>
</nav>